{% extends "templates/base.njk" %}
{% block main %}
	<header style="--backdrop: url('/assets/series/{{ data.id }}/backdrop.jpg')">
		<img src="/assets/series/{{ data.id }}/poster.jpg" alt="{{ data.original_name }}" class="poster"/>
		<div>
			<h1>{{ data.original_name }} ({{ data.first_aired_date | year }})</h1>
			<p>{{ data.overview }}</p>
		</div>
	</header>
	{% for s in chapters %}
		<section class="season">
			<img src="/assets/series/{{ data.id }}/s{{ s[0] }}.jpg" alt="" class="poster"/>
			<ol>
			{% for c in s[1] %}
				<li{% if c.watched !== null %} class="watched"{% endif %}>
					<a href="/episode/{% if c.watched !== null %}un{% endif %}watch/{{ c.id }}">
						<p class="chapter_title">{{ c.season_number | pad }}x{{ c.episode_number | pad }} {{ c.name }}</p>
						<p class="chapter_desc">{{ c.overview }}</p>
					</a>
				</li>
			{% endfor %}
			</ol>
		</section>
	{% else %}
		<div>No hay capitulos</div>
	{% endfor %}
{% endblock %}
