		body { margin: 0; font-family: var(--font-sans); background: var(--color-black);}
		h1 {
			margin: 1rem;
			font-size: 2.25rem;
		}

		.tv-grid {
			--spacing: var(--size-3);
			list-style: none;
			margin: 0;
			display: grid;
			grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
			gap: var(--spacing);
			padding: var(--spacing);
			place-items: end;
			background: var(--color-black);
		}

		.tv-grid li {
			width: 100%;
		}

		.tv-grid a {
			display: block;
			text-decoration: none;
		}

		.tv-grid img {
			width: 100%;
			display: block;
			border-radius: var(--radius);
			aspect-ratio: 10 / 15;
		}

		.progress {
			--p-bg: var(--color-red-300);
			--p-fg: var(--color-red-700);
			padding: 0.125rem 0;
			text-align: center;
			background: linear-gradient(to right, var(--p-fg) calc(var(--p)*1%), var(--p-bg) calc(var(--p)*1%), var(--p-bg) 100%);
			color: #fff;
		}

		header {
			padding: var(--size-3);
			background-image: linear-gradient(to right, #000c, #000c), var(--backdrop);
			background-size: cover;
			background-position: center center;
			display: flex;
			align-items: center;
			color: var(--color-grey-100);
		}

		.poster {
			height: var(--size-80);
			display: block;
		}

		header h1, header p {
			margin: var(--size-3);
		}

		header h1 {
			font-size: var(--scale-4);
		}

		.season {
			padding: var(--size-3);
			display: grid;
			grid-template-columns: min-content 1fr;
		}

		.season h1 {
			grid-column: span 2;
		}

		.season ol {
			list-style-type: none;
			margin: 0;
			padding: 0;
		}

		.season ol li {
			--spacing: var(--size-3);
			margin: var(--spacing);
			padding: 0;
			background: var(--color-grey-300);
			color: var(--color-black);
			border-radius: var(--radius);
		}

		.season ol li.watched {
			background: var(--color-green-300);
			color: var(--color-green-700);
		}
		.season ol li.watched .chapter_desc {
			color: var(--color-green-700);
		}

		.season ol li:first-child { margin-top: 0 }

		.season ol li:hover { background: var(--color-grey-700); color: var(--color-grey-100); }
		.season ol li:hover .chapter_desc { color: var(--color-grey-100); }
		.season ol li p { margin: var(--size-1) 0; }

		.season ol li a {
			padding: var(--spacing);
			text-decoration: none;
			color: inherit;
			display: block;
		}

		.chapter_title {
			font-size: var(--scale-2);
			font-weight: var(--font-semibold);
		}

		.chapter_desc {
			color: var(--color-grey-700);
		}
